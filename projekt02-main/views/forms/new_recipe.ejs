<form action="/cards/<%= category.id %>/new" method="POST">
  <div>
    <label for="dishname">Nazwa dania</label>
    <input
      type="text"
      name="dishname"
      id="dishname"
      required
      minlength="1"
      maxlength="500"
      <% if (locals.dishname){ %>
      value="<%= dishname %>"
      <% } %>
    />
  </div>

  <div>
    <label for="dishtime">Czas przygotowania (minuty)</label>
    <input
      type="text"
      name="dishtime"
      id="dishtime"
      required
      minlength="1"
      maxlength="100"
      <% if (locals.dishtime){ %>
      value="<%= dishtime %>"
      <% } %>
    />
  </div>

  <div>
    <label for="ingredients">Sk≈Çadniki</label>
    <textarea
      name="ingredients"
      id="ingredients"
      required
      minlength="1"
      maxlength="1000"
      rows="3"
    ><%= locals.ingredients ? ingredients : "" %></textarea>
  </div>

  <div>
    <label for="recipie">Przepis</label>
    <textarea
      name="recipie"
      id="recipie"
      required
      minlength="1"
      maxlength="2000"
      rows="5"
    ><%= locals.recipie ? recipie : "" %></textarea>
  </div>

  <% if (locals.errors && errors.length > 0) { %>
    <ul style="color:red;">
      <% errors.forEach(error => { %>
        <li><%= error %></li>
      <% }); %>
    </ul>
  <% } %>

  <div>
    <button type="submit">Dodaj przepis</button>
  </div>
</form>
